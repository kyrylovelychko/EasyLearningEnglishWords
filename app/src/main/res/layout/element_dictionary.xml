<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dictionsaryElement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dict_vert_margin"
    android:layout_marginLeft="@dimen/dict_horiz_margin"
    android:layout_marginRight="@dimen/dict_horiz_margin"
    android:layout_marginTop="@dimen/dict_vert_margin">

    <TextView
        android:id="@+id/dictionary_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/dictionary_name_size" />

    <TextView
        android:id="@+id/words_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/words_count_size" />

    <TextView
        android:id="@+id/dictionary_date_of_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dictionary_name"
        android:layout_marginTop="@dimen/date_vert_margin"
        android:textSize="@dimen/dictionary_date_size" />

</RelativeLayout>