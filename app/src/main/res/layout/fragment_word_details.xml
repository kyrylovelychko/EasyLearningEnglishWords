<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        style="@style/FinalTextViewWordDetails"
        android:text="@string/layout_tv_english_word"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/en_word"
        style="@style/NonFinalTextViewWordDetails"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        style="@style/FinalTextViewWordDetails"
        android:text="@string/layout_tv_russian_word"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/en_word" />

    <TextView
        android:id="@+id/ru_word"
        style="@style/NonFinalTextViewWordDetails"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        style="@style/FinalTextViewWordDetails"
        android:text="@string/layout_tv_dictionary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ru_word" />

    <TextView
        android:id="@+id/dictionary"
        style="@style/NonFinalTextViewWordDetails"
        app:layout_constraintLeft_toRightOf="@id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView5" />

</android.support.constraint.ConstraintLayout>